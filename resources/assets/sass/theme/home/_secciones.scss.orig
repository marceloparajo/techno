								a {
									img {
										transform: none;
										filter: none;
									}
								}
							}
						}
						.meta-content {
							position: static;
						}
						figure {
							&:hover {
								a {
									img {
										transform: scale(1.02);
									}
								}
							}
						}
						.miramas {
							width: 100%;
							padding: 5px 10px 0 10px;
							margin: auto 0 0 0;
							color: white;
							display: block;
							background: $negro;
							text-align:  right;
							border-radius: 2px;
							a {
								color: white;
								&:before {
									content: "\F061";
									font-family: "FontAwesome";
									display: block;
									font-size: 20px;
									margin-left: 10px;
									transform: translateY(-5px);
									float: right;
								}
							}
						}
					}
				}
				.grupotres {
					.articulo.devideo {
						border-top: none;
						background: $negro;
						padding: 0;
						figure {
							width: 40%;
						}
						.meta-content {
							width: 60%;
							padding: 10px;
							h2 {
								font-size: 1.1rem;
								margin: 0;
							}
							h5 {
								dislay: block;
								margin: 5px 0 0 0;
							}
						}
						&:last-of-type {
							margin-bottom: 0;
						}
					}
				}
			}
		}
	}
}

.revistas {
	margin:0 auto 20px auto;
	padding: 0;
	border: 1px solid $linea;
	.notas-revistas {
		.articulo.derevistas {
			margin: 0;
			padding: 10px;
			transition: ease .3s;
			.meta-content {
				padding: 5px 0;
			}
			&:hover {
				background: $light;
			}
		}
		.grupotres {
			.articulo.derevistas {
				border-top: 1px solid $linea;
				display: flex;
				justify-content: space-between;
				figure {
					width: 30%;
				}
				.meta-content {
					width: 68%;
					padding: 0;
				}
			}
		}
	}
	@include media-breakpoint-up(md) {
		.notas-revistas {
			display: flex;
			>.articulo.derevistas {
				width: 50%;
				margin: 0;
				position: relative;
				border-top: 1px solid $linea;
				.meta-content {
					position: absolute;
					bottom: 10px;
					left: 20px;
					right: 20px;
					background: white;
					width: auto;
					padding: 10px;
					a {
						h2 {
							font-size: 1.4rem;
						}
					}
				}
			}
			.grupotres {
				width: 50%;
				.articulo.derevistas {
					border-left: 1px solid $linea;
					.meta-content {
						a {
							h2 {
								font-size: 1.1rem;
							}
						}
					}
				}
			}
		}

	}
	@include media-breakpoint-up(lg) {
		.notas-revistas {
			.articulo.derevistas {
				&:hover {
					figure {
						a {
							img {
								filter: none;
								transform: none;
							}
						}
					}
				}
			}
			>.articulo.derevistas {
				width: 33%;
			}
			.grupotres {
				width: 67%;
				display: flex;
				.articulo.derevistas {
					width: 33.333333%;
					display: block;
					figure {
						width: 100%;
					}
					.meta-content {
						width: 100%;
						padding: 5px 0;
					}
				}
			}
		}
	}
	@include media-breakpoint-up(xl) {
		.notas-revistas {
			>.articulo.derevistas {
				.meta-content {
					bottom: 20px;
				}
			}
		}
	}
}