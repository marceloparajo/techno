$sports: #33c381;
$mujer: #be227d;
$shows: #e43d3d;

.secciones {
	padding: 0;
	width: 100%;
	margin: 0 auto 20px auto;
	.caja-contenido {
		.seccionfija {
			h6 {
				margin: 0;
				font: {
					family: $font-condensada;
					size: 6vw;
					weight: 400;
				}
				text-transform: uppercase;
				color: white;
				background: $mujer;
				padding: 3px 10px;
				&:before {
					content: "Mujer";
					display: inline-block;
					width: auto;
					height: auto;
				}
			}
			.contenedor-notas {
				border-bottom: 4px solid $mujer;
				.articulo.seccion {
					display: flex;
					justify-content: space-between;
					padding-top: 10px;
					border-top: 1px solid $linea;
					figure {
						width: 30%;
					}
					.meta-content {
						width: 68%;
						padding: 0;
						h3 {
							display: none;
						}
					}
					&:first-of-type {
						display: block;
						padding-top: 0;
						figure {
							width: 100%;
						}
						.meta-content {
							width: 100%;
							padding: 5px 10px 0 10px;
							a {
								h2 {
									font-size: 6vw;
								}
							}
						}
					}
				}
			}
			&.deportes {
				h6 {
					background: $sports;
					&:before {
						content: "Deportes";
					}
				}
				.contenedor-notas {
					border-bottom: 4px solid $sports;
				}
			}
			&.espectaculos {
				h6 {
					background: $shows;
					&:before {
						content: "Espectaculos";
					}
				}
				.contenedor-notas {
					border-bottom: 4px solid $shows;
				}
			}
		}
	}
	.caja-right {
	}
	@include media-breakpoint-up(sm) {
		.caja-contenido {
			.seccionfija {
				h6 {
					font-size: 1.4rem;
				}
				.contenedor-notas {
					display: flex;
					flex-wrap: wrap;
					justify-content: space-between;
					border-bottom: none;
					.articulo.seccion {
						width: 31.5%;
						border-bottom: 2px solid $mujer;
						border-top: none;
						padding-top: 0;
						display: block;
						figure {
							width: 100%;
						}
						.meta-content {
							padding: 0;
							width: 100%;
							a {
								h2 {
									font-size: 1.1rem;
								}
							}
						}
						&:first-of-type {
							width: 100%;
							.meta-content {
								padding: 0;
								a {
									h2 {
										font-size: 1.4rem;
									}
								}
							}
						}
					}
				}
				&.deportes {
					.contenedor-notas {
						border-bottom: none;
						.articulo.seccion {
							border-bottom: 2px solid $sports;
						}
					}
				}
				&.espectaculos {
					.contenedor-notas {
						border-bottom: none;
						.articulo.seccion {
							border-bottom: 2px solid $shows;
						}
					}
				}
			}
		}
	}
	@include media-breakpoint-up(md) {
		.caja-contenido {
			.seccionfija {
				.contenedor-notas {
					.articulo.seccion {
						&:first-of-type {
							display: flex;
							padding: 10px 0;
							.meta-content {
								width: 34%;
								padding: 0 0 0 10px;
								h4 {
									display: block;
								}
							}
							figure {
								width: 66%;
							}
						}
					}
				}
			}
		}
	}
	@include media-breakpoint-up(lg) {
		display: flex;
		.caja-contenido {
			flex: 1 1 0;
			.seccionfija {
				.contenedor-notas {
					.articulo.seccion {
						position: relative;
						figure {
							h4 {
								display: none;
							}
						}
						margin: 0;
						&:hover {
							figure {
								a {
									img {
										filter: brightness(70%);
									}
								}
							}
						}
						&:first-of-type {
							padding: 0;
							figure {
								width: 67%;
							}
							.meta-content {
								width: 33%;
								padding: 10px 0;
								a {
									h2 {
										padding-left: 10px;
										font-size: 1.6rem;
									}
									h4 {
										padding-left: 10px;
										display: none;
									}
								}
								h5 {
									margin-left: 10px;
								}
							}
							&:hover {
								figure {
									a {
										img {
											filter: brightness(110%);
											transform: scale(1);
										}
									}
								}
							}
						}
						&:nth-child(n+2) {
							width: 33%;
							.meta-content {
								position: absolute;
								bottom: 0;
								left: 0;
								right: 0;
								background: rgba(0,0,0,0);
								background: linear-gradient(to bottom, rgba(0,0,0,0) 0%, rgba(0,0,0,1) 100%);
								filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#000000', endColorstr='#000000', GradientType=0 );				
								a {
									h3 {
										background: $negro;
										color: white;
										display: inline-block;
										padding: 5px 10px;
									}
									h2 {
										color: white;
										padding: 0 10px;
										letter-spacing: 0;
									}
								}
								h5 {
									color: white;
									padding: 0 10px;
									a {
										color: white;
										&:hover {
											text-decoration: underline;
										}
									}
								}
							}
						}
						&:nth-child(3n){
							width: 34%;
							border-left: 2px solid $mujer;
							border-right: 2px solid $mujer;
						}
					}
				}
				&.deportes {
					background: #525151;
					.articulo.seccion {
						.meta-content {
							a {
								h3 {
									background: $negro;
									color: white;
									display: inline-block;
									padding: 5px 10px;
								}
								h2 {
									color: white;
								}
								h4 {
									color: white;
								}
							}
							h5 {
								color: white;
								a {
									color: white;
									&:hover {
										text-decoration: underline;
									}
								}
							}
						}
						&:first-of-type {
							.meta-content {
								padding-right: 10px;
							}
						}
						&:nth-child(3n){
							border-left: 2px solid $sports;
							border-right: 2px solid $sports;
						}
					}
				}
				&.espectaculos {
					.articulo.seccion {
						&:nth-child(3n) {
							border-left: 2px solid $shows;
							border-right: 2px solid $shows;
						}
					}
				}
			}
		}
		.caja-right {
			flex-basis: 300px;
			margin: 0 0 0 20px;
		}
	}
	@include media-breakpoint-up(xl) {
		.caja-contenido {
			.seccionfija {
				.contenedor-notas {
					.articulo.seccion {
						&:first-of-type {
							.meta-content {
								a {
									h2 {
										font-size: 1.8rem;
									}
									h4 {
										display: block;
									}
								}
							}
						}
					}
				}
			}
		}
	}
}

